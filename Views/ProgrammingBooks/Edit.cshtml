@model Zaliczenie_JIPP_Jakub_Bialek.Models.ProgrammingBookModel

<form asp-action="Edit" asp-controller="ProgrammingBooks" method="post">
    <input type="hidden" asp-for="ID" />
        <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Author</label>
                <input asp-for="Author" type="text" />       
            </div>

            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" type="text" />       
            </div>

            <div class="Publication Year">
                <label>Publication Year</label>
                <input asp-for="PublishYear" type="text" />       
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Edit</button>
                    <a asp-action="Index" asp-controller="ProgrammingBooks" class="btn">Return</a>
                </center>
            </div>
        </div>
    </div>
</form>