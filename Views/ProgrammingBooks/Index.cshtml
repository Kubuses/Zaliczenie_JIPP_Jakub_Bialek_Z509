
@model List<Zaliczenie_JIPP_Jakub_Bialek.Models.ProgrammingBookModel>


<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="ProgrammingBooks" class="btn btn-success">
            Add New Book
        </a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thread>
                <tr>
                    <td>Id</td>
                    <td>Author</td>
                    <td>Title</td>
                    <td>Publication Date</td>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Author</td>
                        <td>@item.Title</td>
                        <td>@item.PublishYear</td>
                        <td>
                        <a asp-action="Edit" asp-controller="ProgrammingBooks" class="btn btn-warning" asp-route-id="@item.ID">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-controller="ProgrammingBooks" class="btn btn-danger" asp-route-id="@item.ID">
                            Delete
                         </a>

                        </td>
                    </tr>
                }
            </tbody>
   
        </table>
    </div>
</div>