@model Zaliczenie_JIPP_Jakub_Bialek.Models.ProgrammingBooksModel

<form asp-action="Create" asp-controller="ProgrammingBooksController" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Author</label>
                <input asp-for="Author" type="text" />       
            </div>
             class="col-md-12">
            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" type="text" />       
            </div>
             class="col-md-12">
            <div class="Publication Year">
                <label>Author</label>
                <input asp-for="PublishYear" type="text" />       
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-success">Add Book</button>
                    <a asp-action="Index" asp-controller="ProgrammingBooksController" class="btn">Return to Index</a>
                </center>
            </div>
        </div>
    </div>
</form>